    window.onload = function () {
        (function () {
            var dCity = document.getElementById('city');
            function getQueryString(name) {
                var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)","i");
                var result = window.location.search.substr(1).match(reg);
                if (result!=null) {
                    return result[2];
                } else {
